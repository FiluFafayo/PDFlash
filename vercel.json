{
  "builds": [
    {
      "src": "/api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "external": ["qpdf"]
      }
    }
  ],
  "build": {
    "env": {
      "QPDF_INSTALL": "true"
    }
  },
  "functions": {
    "/api/**/*.js": {
      "runtime": "nodejs20.x",
      "memory": 1024
    }
  }
}